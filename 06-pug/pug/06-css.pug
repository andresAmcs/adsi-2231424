doctype
html(lang="en")
	head
		meta(charset="UTF-8")
		title Style CSS
		style(stylesheet).
			h1 {
				color: #ddd;
				text-shadow: 0px 2px 4px #333;				
			}
			ul {
				list-style: none;
			}
	body
		h1 Style CSS
		ul
			each val, index in ['yellow', 'blue', 'red', 'green', 'purple']
				li(style='background-color:'+val)= index + ': ' + val