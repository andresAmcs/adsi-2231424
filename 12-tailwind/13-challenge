<script>
   const section01 = document.querySelector('section#frame01');
   const section02 = document.querySelector('section#frame02');
   const section03 = document.querySelector('section#frame03');
   const btnSec01GetHunt = document.querySelector('section#frame01>div>button');
   const btnSec02Next = document.querySelector('section#frame02>button');
   const btnSec03StartTest = document.querySelector('section#frame03>button');
   const btnSec02Ret = document.querySelector('section#frame02>nav>a#return');
   const btnSec03Ret = document.querySelector('section#frame03>nav>a#return');

   btnSec01GetHunt.onclick = function(){
      console.log('prueba');
      //alert('hola');
      section01.classList.toggle('hidden');
      section02.classList.toggle('hidden');
   }
   btnSec02Next.onclick = function (){
      section02.classList.toggle('hidden');
      section03.classList.toggle('hidden');
   }
   btnSec03StartTest.onclick = function(){
      section01.classList.toggle('hidden');
      section03.classList.toggle('hidden');
   }
   btnSec02Ret.onclick = function(){
      console.log('prueba');
      //alert('hola');
      section02.classList.toggle('hidden');
      section01.classList.toggle('hidden');
   }
   btnSec03Ret.onclick = function (){
      section03.classList.toggle('hidden');
      section02.classList.toggle('hidden');
   }

</script>